<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-center text-center main_image">
  <h1 class="text-3xl pt-10 pb-5"><%= t('.title') %></h1>
  <div class="pb-10">
    <% @zoos_by_area.each do |area, zoos| %>
      <div class="text-2xl mt-8 mb-2"><%= area %></div>
      <ul>
        <% zoos.each do |zoo| %>
          <li class="text-xl link link-primary pb-1"><%= link_to "#{zoo.name}(#{zoo.prefecture})", zoo_path(zoo) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
