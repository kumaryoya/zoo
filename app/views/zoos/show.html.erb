<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-center text-center py-20 main_image">
  <div>
    <h1 class="text-3xl my-5"><%= t('.title') %></h1>
  </div>
  <div>
    <h2 class="text-2xl font-bold my-10"><%= @zoo.name %></h2>
    <h2 class="text-2xl font-bold my-10">所在地：<%= @zoo.location %></h2>
    <div style="display: flex; justify-content: center; align-items: center;">
      <h2 class="text-2xl font-bold">ホームページ：</h2>
      <div class="link link-primary text-2xl font-bold">
        <%= link_to "#{@zoo.link}", @zoo.link %>
      </div>
    </div>
  </div>
  <div class="main_image items-center justify-center text-center">
    <h1 class="text-3xl py-16"><%= t 'defaults.posts' %></h1>
    <section class="main_image items-center justify-center text-center">
      <div class="container px-2 mx-auto">
        <div class="flex flex-wrap justify-center pb-16">
          <% if @posts.present? %>
            <%= render @posts %>
          <% else %>
            <p class="text-2xl"><%= t('.no_result') %></p>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
