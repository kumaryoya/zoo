<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-center text-center main_image">
  <h1 class="text-3xl py-10"><%= t('.title') %></h1>
  <ol class="pb-10">
    <% @top_zoos.each_with_index do |zoo, index| %>
      <li class="text-2xl link link-primary pb-5">
        第<%= index + 1 %>位 <%= link_to zoo.name, zoo_path(zoo) %>
      </li>
    <% end %>
  </ol>
</div>
