<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-center text-center main_image">
  <h1 class="text-5xl pt-16 pb-10"><%= t('.title') %></h1>
  <div style="position: relative; text-align: center;" class="pb-10">
    <span style="display: flex; align-items: center; justify-content: center;" class="text-center text-2xl">
      みんなが登録してくれた<br>
      お気に入り動物園の結果を集計して<br>
      トップ10をランキング形式で<br>
      発表しているゾゥ<br>
    </span>
    <%= image_tag "animalface_zou.png", class: "message-image w-16 rounded-full mx-auto" %>
  </div>
  <ol class="pb-10">
    <% @top_zoos.each_with_index do |zoo, index| %>
      <li class="text-4xl pb-16">
        <div class="parent-container">
          <%= image_tag("#{format('%02d', index + 1)}.png", alt: "#{index + 1}st Place", class: 'small-size pb-4') %>
        </div>
        <%= link_to zoo.name, zoo_path(zoo), class: "link link-primary" %>
      </li>
    <% end %>
  </ol>
</div>
