<header class= "header_image">
  <div class="container mx-auto flex flex-wrap flex-col md:flex-row items-center py-8">
    <div>
      <%= link_to root_path do %>
        <%= image_tag "logo_cut.png", style: "width: 240px; height: 120px;" %>
      <% end %>
    </div>
    <div class="md:ml-auto flex flex-wrap items-center text-base md:text-xl justify-center">
      <div class="dropdown dropdown-hover dropdown-end mr-5">
        <label tabindex="0" class="btn btn-primary btn-lg text-white m-1">動物園</label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
          <%= link_to (t 'zoos.index.title'), zoos_path, class: "btn btn-primary text-white my-1" %>
          <%= link_to (t 'zoos.ranking.title'), ranking_zoos_path, class: "btn btn-primary text-white my-1" %>
        </ul>
      </div>
      <div class="dropdown dropdown-hover dropdown-end mr-5">
        <label tabindex="0" class="btn btn-primary btn-lg text-white m-1">投稿</label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
          <% if logged_in? %>
            <%= link_to (t 'posts.new.title'), new_post_path, class: "btn btn-primary text-white my-1" %>
          <% end %>
          <%= link_to (t 'posts.index.title'), posts_path, class: "btn btn-primary text-white my-1" %>
          <%= link_to (t 'posts.ranking.title'), ranking_posts_path, class: "btn btn-primary text-white my-1" %>
        </ul>
      </div>
      <div class="dropdown dropdown-hover dropdown-end mr-2">
        <label tabindex="0" class="btn btn-primary btn-lg text-white m-1">ランキング</label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
          <%= link_to (t 'zoos.ranking.title'), ranking_zoos_path, class: "btn btn-primary text-white my-1" %>
          <%= link_to (t 'posts.ranking.title'), ranking_posts_path, class: "btn btn-primary text-white my-1" %>
        </ul>
      </div>
      <% if logged_in? %>
        <div class="dropdown dropdown-hover dropdown-end">
          <label tabindex="0" class="btn m-1" style="background-color: transparent; border: none;">
            <div class="avatar">
              <div class="w-20 rounded-full">
                <%= image_tag current_user.avatar.url %>
              </div>
            </div>
          </label>
          <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
            <%= link_to (t "profiles.show.title"), profile_path, class: "btn btn-primary text-white my-1" %>
            <%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete, "turbo-confirm": (t 'defaults.logout?') }, class: "btn btn-primary text-white my-1" %>
          </ul>
      <% else %>
        <%= link_to (t 'defaults.loginpage'), login_path, class: "btn btn-primary btn-lg text-white mr-5"%>
        <%= link_to (t 'defaults.register_page'), new_user_path, class: "btn btn-primary btn-lg text-white"%>
      <% end %>
    </div>
  </div>
</header>
