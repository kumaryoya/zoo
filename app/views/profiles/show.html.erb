<% content_for(:title, t('.title')) %>
<div class="main_image">
  <div class="text-center">
    <div class="text-4xl md:grid justify-items-stretch">
      <div class="font-bold md:w-2/3 xl:w-1/3 justify-self-center pt-20 pb-10"><%= t('.title') %></div>
      <div><%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-accent text-brown mb-20' %></div>
    </div>
  </div>
  <div class="flex justify-center text-center">
    <div class="md">
      <div class="mb-10">
        <div class="font-bold text-2xl", scope="row"><%= t(User.human_attribute_name(:name)) %></div>
        <div class="font-bold text-2xl"><%= current_user.name %></div>
      </div>
      <div class="mb-10">
        <div class="font-bold text-2xl", scope="row"><%= t(User.human_attribute_name(:email)) %></div>
        <div class="font-bold text-2xl"><%= current_user.email %></div>
      </div>
      <div class="mb-20">
        <div class="font-bold text-2xl", scope="row"><%= t(User.human_attribute_name(:avatar)) %></div>
        <div class="avatar">
          <div class="w-16 rounded-full">
            <%= image_tag current_user.avatar.url %>
          </div>
        </div>
      </div>
      <%= link_to t('defaults.withdrawal'), user_path(current_user.id), data: { turbo_method: :delete, "turbo-confirm": (t 'defaults.withdrawal?') }, class: "btn btn-neutral text-white mb-20" %>
    </div>
  </div>
</div>
