<% content_for(:title, t('.title')) %>
<div class="main_image">
  <div class="text-center">
    <div class="pt-20">
      <div class="text-4xl md:grid justify-items-stretch">
        <div class="font-bold md:w-2/3 xl:w-1/3 justify-self-center pb-5"><%= t('.title') %></div>
        <div><%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-accent text-white mb-5' %></div>
      </div>
    </div>
  </div>
  <div class="flex justify-center text-center">
    <div class="text-base md:text-xl">
      <div class="mb-3">
        <div class="font-bold", scope="row"><%= t(User.human_attribute_name(:name)) %></div>
        <div class="mb-5"><%= current_user.name %></div>
      </div>
      <div class="mb-3">
        <div class="font-bold", scope="row"><%= t(User.human_attribute_name(:email)) %></div>
        <div class="mb-5"><%= current_user.email %></div>
      </div>
      <div>
        <div class="font-bold", scope="row"><%= t(User.human_attribute_name(:avatar)) %></div>
        <div class="avatar">
          <div class="w-20 rounded-full mb-5">
            <%= image_tag current_user.avatar.url %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <div class="pt-10">
      <div class="text-4xl md:grid justify-items-stretch">
        <div class="font-bold md:w-2/3 xl:w-1/3 justify-self-center pb-5"><%= t('defaults.favorite_zoo') %></div>
        <div class="main_image flex items-center justify-center text-center pb-5">
  <%= form_with(model: [@user, @favorite_zoo], url: user_favorite_zoos_path(@user)) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="flex flex-col items-center">
      <%= f.label :rank %>
      <%= f.select :rank, (1..3).to_a, { prompt: "順位を選択してください" }, class: "mr-5" %>
    </div>
    <div class="flex flex-col items-center">
      <%= f.label :zoo_id %>
      <%= f.collection_select :zoo_id, Zoo.all, :id, :name, { prompt: "動物園を選択してください" } %>
    </div>
    <%= f.submit class: "btn btn-primary text-white font-bold my-5" %>
  <% end %>
</div>
        <div class="main_image items-center justify-center text-center pb-20">
          <% @favorite_zoos.each do |favorite_zoo| %>
            <span>第<%= favorite_zoo.rank %>位</span>
            <span><%= favorite_zoo.zoo.name %></span>
            <%= link_to t('defaults.destroy'), user_favorite_zoo_path(current_user, favorite_zoo), data: { turbo_method: :delete, "turbo-confirm": (t 'defaults.destroy?') }, class: "btn btn-neutral text-white mb-10" %>
            <br>
          <% end %>
          <%= link_to "https://twitter.com/share?url=#{request.url}&text=#{current_user.name}さんの今回の学習時間は分でした！%0A&hashtags=StudyingTracker", target: '_blank', class: 'btn btn-secondary text-white' do %>
            <i class="fab fa-twitter fa-2xl"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
