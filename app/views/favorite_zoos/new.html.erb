<%= form_with(model: [@user, @favorite_zoo], url: user_favorite_zoos_path(@user)) do |form| %>
  <div>
    <%= form.label :rank, "順位" %>
    <%= form.select :rank, (1..3).to_a, { prompt: "順位を選択してください" } %>
  </div>
  <div>
    <%= form.label :zoo_id, "動物園" %>
    <%= form.collection_select :zoo_id, Zoo.all, :id, :name, { prompt: "動物園を選択してください" } %>
  </div>
  <%= form.submit "追加", class: "btn" %>
<% end %>
<br>
<tr>
  <th>お気に入り動物園</th>
  <br>
  <td>
    <% @favorite_zoos.each do |favorite_zoo| %>
      <span><%= favorite_zoo.rank %></span>
      <span><%= favorite_zoo.zoo.name %></span>
      <%= link_to "削除", user_favorite_zoo_path(current_user, favorite_zoo), data: { turbo_method: :delete, "turbo-confirm": (t 'defaults.logout?') } %>
      <br>
    <% end %>
  </td>
</tr>
