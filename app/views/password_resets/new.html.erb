<% content_for(:title, t('.title')) %>
<div class="flex justify-center text-center main_image">
  <div>
    <h1 class="text-3xl pt-40 pb-28"><%= t('.title') %></h1>
    <%= form_with url:password_resets_path, method: :post,local: true do |f|%>
      <div class="form-group pb-20">
        <%= f.label :email, User.human_attribute_name(:email), class: "mb-10" %>
        <%= f.email_field :email, class: 'form-control input input-bordered input-primary w-full' %>
      </div>
      <div class="d-grid pb-36">
        <%= f.submit t('defaults.send'), class: 'btn btn-primary text-white' %>
      </div>
    <% end %>
  </div>
</div>
