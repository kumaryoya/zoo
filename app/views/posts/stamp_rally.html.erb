<div class="main_image px-4 py-20 mx-auto">
  <div class="flex flex-col text-center w-full">
    <div class="text-4xl pb-20"><%= t('.title') %></div>
    <div style="position: relative; text-align: center;" class="pb-10">
      <span style="display: flex; align-items: center; justify-content: center;" class="text-center text-base lg:text-2xl">
        動物園の写真を投稿するとスタンプが押されるゾゥ<br>
        たくさんの動物園に行こうだゾゥ<br>
      </span>
      <%= image_tag "animalface_zou.png", class: "message-image w-16 rounded-full mx-auto" %>
    </div>
    <div class="flex flex-wrap -m-2">
      <% @zoos.each do |zoo| %>
        <div class="p-2 lg:w-1/3 md:w-1/2 w-full">
          <div class="h-full flex items-center border-double border-4 border-brown p-4 rounded-lg paper_image">
            <div class="avatar pr-1">
              <div class="w-20 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2 border-solid border-2 border-brown">
                <% if current_user.posts.exists?(zoo_id: zoo.id) %>
                  <%= image_tag ["buta.jpg", "kuma.jpg", "uma.jpg", "kaba.jpg", "tora.jpg", "usagi.jpg", "panda.jpg", "saru.jpg", "penguin.jpg", "hitsuji.jpg", "koala.jpg", "risu.jpg"].sample %>
                <% end %>
              </div>
            </div>
            <div class="flex-grow link link-primary">
              <%= link_to "#{zoo.name}", zoo_path(zoo) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
