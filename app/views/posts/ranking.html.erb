<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-center text-center py-10 main_image">
  <div>
    <h1 class="text-3xl py-10"><%= t('.title') %></h1>
  </div>
  <ol class="mx-auto max-w-md">
    <% @top_posts.each_with_index do |post, index| %>
      <li class="font-bold text-xl">第<%= index + 1 %>位 <%= render post %></li>
      <br>
    <% end %>
  </ol>
</div>
