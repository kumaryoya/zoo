<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-center text-center main_image">
  <h1 class="text-3xl py-10"><%= t('.title') %></h1>
  <ol class="mx-auto max-w-md">
    <% @top_posts.each_with_index do |post, index| %>
      <li class="text-2xl pb-10">第<%= index + 1 %>位 <%= render post %></li>
    <% end %>
  </ol>
</div>
