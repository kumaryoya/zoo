<div class="card w-96 shadow-xl post_image m-3">
  <figure class="p-5"><%= image_tag post.image_url, alt:"Posts" %></figure>
  <div class="card-body">
    <h2 class="card-title pl-2"><%= post.title %></h2>
    <p><%= post.user.name %></p>
    <p><%= post.zoo.name%></p>
    <div class="card-actions justify-end">
      <% if current_user == post.user %>
        <%= link_to "共有", "https://twitter.com/share?url=https://studying-tracker.fly.dev/&text=#{post.user.name}さんの今回の学習時間は分でした！%0A&hashtags=StudyingTracker", class: 'btn btn-info fa-brands fa-twitter fa-2xl text-twitter', target: '_blank' %>
        <%= link_to  t('defaults.edit'), edit_post_path(post), class: "btn btn-primary text-white" %>
        <%= link_to t('defaults.destroy'), post_path(post), data: { turbo_method: :delete, "turbo-confirm": (t 'defaults.destroy?') }, class: "btn btn-primary text-white" %>
      <% else %>
        <button class="btn btn-primary text-white">いいね</button>
      <% end %>
    </div>
  </div>
</div>
