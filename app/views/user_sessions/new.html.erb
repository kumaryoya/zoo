<% content_for(:title, t('.title')) %>
<script src="https://accounts.google.com/gsi/client" async defer></script>
<div class="flex justify-center text-center main_image">
  <div>
    <h1 class="text-3xl py-10"><%= t('.title') %></h1>
    <%= form_with model: @user, local: true do |f| %>
      <div class="mb-5">
        <%= f.label :email, User.human_attribute_name(:email) %>
        <%= f.email_field :email, class: 'input input-bordered input-primary w-full' %>
      </div>
      <div class="mb-5">
        <%= f.label :password, User.human_attribute_name(:password) %>
        <%= f.password_field :password, class: 'input input-bordered input-primary w-full' %>
      </div>
      <div class="actions mb-10">
        <%= f.submit (t 'defaults.login'), class: 'btn btn-primary text-white' %>
      </div>
    <% end %>
    <%= link_to (t 'password_reset.new.to_page'), new_password_reset_path, class: "btn btn-primary text-white mb-10"%>
    <div class="flex justify-center mb-10">
      <div id="g_id_onload"
        data-client_id="288360666860-8fku5g6vlc42pabvmc7ui2iuebef29un.apps.googleusercontent.com"
        data-login_uri="http://localhost:3000/google_login_api/callback"
        data-auto_prompt="false">
      </div>
      <div class="g_id_signin"
        data-type="standard"
        data-size="large"
        data-theme="outline"
        data-text="sign_in_with"
        data-shape="rectangular"
        data-logo_alignment="left">
      </div>
    </div>
  </div>
</div>
